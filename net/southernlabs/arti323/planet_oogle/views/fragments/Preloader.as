package net.southernlabs.arti323.planet_oogle.views.fragments {	import flash.display.MovieClip;	import com.inruntime.utils.Global;	import flash.events.Event;	import flash.net.URLRequest;	import flash.display.Loader;	import net.southernlabs.arti323.planet_oogle.config.GameConfig;	import flash.events.ProgressEvent;		public class Preloader extends MovieClip {				private var $:Global = Global.getInstance();		private var place:String = "";		private var path:String = "";				var mLoader:Loader;		var mRequest:URLRequest;				public function loadScene(path:String, onLoadedComplete:Function){						setPath(path);						mLoader = new Loader();			mRequest = new URLRequest(getPath());			mLoader.contentLoaderInfo.addEventListener(Event.COMPLETE, onLoadedComplete);			mLoader.contentLoaderInfo.addEventListener(ProgressEvent.PROGRESS, onPreload);			mLoader.load(mRequest);					}				public function setProgress(percentage:Number):void {			this.bar.scaleX = percentage;		}				private function setPath(p:String){			this.path = p;		}				private function getPath():String {			return this.path;		}				private function onPreload(e:ProgressEvent){			var percent:Number = e.bytesLoaded/e.bytesTotal;			setProgress(percent);		}	}	}